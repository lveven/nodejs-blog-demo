<%- include header%>








  <table class="table table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>用户名</th>
        <th>密码</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i =0; i<data.length;i++){%>
        <tr class="row<%=i+1%>">
          <th scope="row">
            <%= i +1 %>
          </th>
          <td class="name">
            <%=data[i].username %>
          </td>
          <td class="password">
            <%=data[i].password -%>
          </td>
          <td >

           <button type="button" class="btn btn-info submit btn-sm" data="<%=i+1%>" name="button">编辑</button>

            <button type="button" class="btn btn-info btn-sm" name="button">删除</button>
          </td>
        </tr>
        <%}%>
    </tbody>
  </table>

